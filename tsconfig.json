{
  "compilerOptions": {
    /* === Paths === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Node Environment === */
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* === Output Options === */
    "sourceMap": true,
    "declaration": true,

    /* === Type Checking === */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}